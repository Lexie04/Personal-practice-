import numpy as np
  
import matplotlib.pyplot as plt
  
x = np.linspace(-1,1,100)
  
y1 = x * 2 + 100
  
  
y2 = x ** 2
  
# 创建一个画布
  
# figsize：设置画布的大小
plt.figure(figsize=(2,2))
plt.plot(x,y1)
  
# 创建第二个画布
plt.figure()
plt.plot(x,y2)
  
plt.show()
