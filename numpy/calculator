arr8 = np.random.randint(1,10,(3,4))
print(arr8)

print(arr8.mean())                   # 统计数组所有元素的均值
print(arr8.mean(axis=0))             # 按列统计数组的均值
print(arr8.max(axis=0))              # 按列统计数组的最大值
print(arr8.argmax(axis=0))           # 找出每列元素最大值的位置
[[5 7 2 1]
 [1 9 1 7]
 [9 7 7 8]]
5.333333333333333
[5.         7.66666667 3.33333333 5.33333333]
[9 9 7 8]
[2 1 2 2]
