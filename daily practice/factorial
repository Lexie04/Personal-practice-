
def calculate_factorial(number):
    # Handle edge case for negative input
    if number < 0:
        raise ValueError("Input should be a non-negative integer.")

    # Initialize the factorial result to 1
    factorial_result = 1

    # Calculate factorial using a for loop
    for i in range(1, number + 1):
        factorial_result *= i

    return factorial_result

# Example Test Cases
result1 = calculate_factorial(5)
print(f"The factorial of 5 is: {result1}")

result2 = calculate_factorial(0)
print(f"The factorial of 0 is: {result2}")

result3 = calculate_factorial(3)
print(f"The factorial of 3 is: {result3}")

result4 = calculate_factorial(-1)
print(f"The factorial of -1 is: {result4}")
