import numpy as np

# 生成一个一维数组
arr4 = np.arange(1,13)
print(arr4)
# 把一维数组变成三行四列的二维数组
arr4 = np.arange(1,13).reshape([3,4])
print(arr4)

print(arr4[2,3])     # 取出第三行第四个元素
print(arr4[2,:])     # 取出第三行（一维）
print(arr4[2:,:])    # 取出第三行（二维）
print(arr4[:,0])     # 取出第一列
print(arr4[1:3,1:3]) # 取出第二、三行与第二、三列
